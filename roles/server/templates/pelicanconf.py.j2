AUTHOR = '{{ pelican.author }}'
SITENAME = '{{ pelican.sitename }}'
SITEURL = 'https://{{ pelican.domain }}'

THEME = '{{ pelican_themes_dir }}/{{ pelican.theme }}'
PATH = 'content'
STATIC_PATHS = ['file']

TIMEZONE = 'US/Eastern'
DATE_FORMATS = {'en': '%a %Y-%m-%d'}

